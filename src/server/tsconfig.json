{
  "compilerOptions": {
    "outFile": "../../.build/server/main.js",

    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true
  },
  "include": [
    "../../node_modules/@types/**/*.d.ts",
    "main.ts"
  ]
}
